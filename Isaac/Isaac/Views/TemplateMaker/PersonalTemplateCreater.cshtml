@model IEnumerable<Isaac.Models.PersonalTemplate> 

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}

<h2>Template</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TemplateTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TemplateDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubjectContent)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TemplateTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TemplateDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectContent)
            </td>
            <td>
                @Html.ActionLink("Edit Template", "PersonalTemplateEdit", new { id = item.PTemplateID }) |
                @Html.ActionLink("Edit Question", "PersonalTemplateQuestionCreater", new { id = item.PTemplateID }) |
                @Html.ActionLink("Delete", "PersonalTemplateDelete", new { id = item.PTemplateID })

            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Create New", "PersonalTemplateCreate", new { id = ViewBag.UserID })
</p>
