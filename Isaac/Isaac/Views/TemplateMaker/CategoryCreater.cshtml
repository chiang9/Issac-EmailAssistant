@model IEnumerable<Isaac.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Category</h2>

<p>
    @Html.ActionLink("Create New", "CategoryCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryDescription)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryDescription)
            </td>
            <td>
                @Html.ActionLink("Edit", "CategoryEdit", new { id = item.CategoryId }) |
                @Html.ActionLink("Delete", "CategoryDelete", new { id = item.CategoryId })|
                @Html.ActionLink("Select", "TemplateCreater", new { id = item.CategoryId})
            </td>
        </tr>
    }

</table>
